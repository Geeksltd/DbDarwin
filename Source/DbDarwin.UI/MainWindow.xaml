<Window x:Class="DbDarwin.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DbDarwin.UI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="527.027" Width="766.555">
    <Grid>
        <StatusBar Height="26" Margin="0" VerticalAlignment="Bottom" Background="#FF007ACC">
            <Label x:Name="label" Content="Ready"  HorizontalAlignment="Left" Padding="0" ScrollViewer.CanContentScroll="True" Margin="5,0,0,0" VerticalAlignment="Top"/>
        </StatusBar>
        <ToolBar x:Name="ToolBar" VerticalAlignment="Top" Height="36">
            <Button x:Name="CompareButton" IsEnabled="False" Content="Compare" Height="31" VerticalAlignment="Top" Width="75" Click="CompareButton_Click"/>

            <ComboBox  x:Name="SelectSource"  Width="250" Text="Select Source" SelectionChanged="SelectSource_SelectionChanged"  >
                <ComboBoxItem  Tag="1" >Select Source...</ComboBoxItem>
            </ComboBox>
            <ComboBox  x:Name="SelectTarget" Width="250" Text="Select Target"  Margin="10,0,0,0" SelectionChanged="SelectTarget_SelectionChanged"  >
                <ComboBoxItem  Tag="1"  >Select Target...</ComboBoxItem>
            </ComboBox>



        </ToolBar>
        <Grid x:Name="LayoutRoot" Background="White" ShowGridLines="True" Margin="0,36,0,26" HorizontalAlignment="Stretch"  Width="759" VerticalAlignment="Stretch" >
            <Grid.RowDefinitions>
                <RowDefinition Height="215" />
                <RowDefinition Height="Auto"  />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="370" />
                <ColumnDefinition Width="370" />
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Column="0" Grid.RowSpan="1" Width="12"  HorizontalAlignment="Right"  VerticalAlignment="Stretch"   />
            <GridSplitter Grid.Row="0" Grid.ColumnSpan="2" Height="10" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"  />

            <Rectangle Grid.Column="1" Fill="LightCoral"  />
            <Rectangle Grid.Row="1" Fill="LightBlue" />
            <!--<Rectangle Grid.Column="1" Grid.Row="1" Fill="Red" />
            <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1"  VerticalAlignment="Top" Width="75"/>-->
        </Grid>















    </Grid>
</Window>
