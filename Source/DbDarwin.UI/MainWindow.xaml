<Window x:Class="DbDarwin.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DbDarwin.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="527.027" Width="766.555" Background="#FF1C1C1C">
    <Grid>
        <StatusBar Height="26" Margin="0" VerticalAlignment="Bottom" Background="#FF007ACC">
            <Label x:Name="label" Content="Ready"  HorizontalAlignment="Left" Padding="0" ScrollViewer.CanContentScroll="True" Margin="5,0,0,0" VerticalAlignment="Top"/>
        </StatusBar>
        <ToolBar x:Name="ToolBar" VerticalAlignment="Top" Height="36">
            <Button x:Name="Button" IsEnabled="False" Content="Compare" Height="31" VerticalAlignment="Top" Width="75"/>

            <ComboBox  x:Name="SelectSource"  Width="250" Text="Select Source"  >
                <ComboBoxItem IsSelected="True">Select Source...</ComboBoxItem>
            </ComboBox>
            <ComboBox  x:Name="SelectTarget" Width="250" Text="Select Target"  Margin="10,0,0,0"  >
                <ComboBoxItem IsSelected="True">Select Target...</ComboBoxItem>
            </ComboBox>



        </ToolBar>















    </Grid>
</Window>
